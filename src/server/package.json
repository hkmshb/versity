{
  "name": "versity-api",
  "version": "0.1.0",
  "private": true,
  "description": "Versity API server",
  "main": "src/index.ts",
  "scripts": {
    "build": "rm -rf ./build && tsc",
    "watch": "tsc --watch",
    "start": "nodemon --watch 'src/**/*.ts' --exec ts-node 'src/index.ts'",
    "test": "NODE_ENV=test LOG_LEVEL=silent mocha -r ts-node/register tests/**/*.test.ts",
    "lint": "tslint --fix -c tslint.json 'src/**/*.ts' 'tests/**/*.test.ts'"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-pino-logger": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.18",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.17.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.8",
    "@types/pino": "^5.8.8",
    "@types/yup": "^0.26.22",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^6.2.0",
    "mocha-param": "^2.0.0",
    "nodemon": "^1.19.1",
    "sqlite3": "^4.0.9",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  }
}
